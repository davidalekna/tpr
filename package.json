{
	"private": true,
	"name": "@tpr/monorepo",
	"license": "MIT",
	"scripts": {
		"remove-typing-dupes": "rimraf node_modules/@types/react-native",
		"postinstall": "yarn remove-typing-dupes && lerna exec -- yarn install --package-lock=false && lerna run prepare",
		"diff": "check-if-folder-contents-changed-in-git-commit-range",
		"build": "lerna run build",
		"test": "jest",
		"coverage": "jest --verbose --coverage",
		"coverage:upload": "codecov",
		"codecov": "echo TODO...",
		"lint": "prettier --list-different \"packages/*/src/**/*.{js,jsx,ts,tsx}\"",
		"lint-fix": "prettier --write \"packages/*/src/**/*.{js,jsx,ts,tsx}\"",
		"lerna": "lerna",
		"posttest": "yarn lint",
		"deploy": "lerna publish",
		"clean": "find . -name \"node_modules\" -exec rm -rf '{}' + && find . -name \"lib\" -exec rm -rf '{}' +",
		"docz:dev": "docz dev",
		"docz:build": "docz build",
		"docz:serve": "docz build && docz serve"
	},
	"dependencies": {
		"core": "file:packages/core",
		"table": "file:packages/table",
		"theming": "file:packages/theming"
	},
	"devDependencies": {
		"@babel/core": "^7.8.3",
		"@rollup/plugin-commonjs": "^11.0.1",
		"@rollup/plugin-node-resolve": "^7.0.0",
		"@rollup/plugin-typescript": "^2.1.0",
		"@testing-library/jest-dom": "^4.2.4",
		"@testing-library/react": "^9.4.0",
		"@types/jest": "^24.0.23",
		"@types/lodash": "^4.14.149",
		"@types/prop-types": "^15.7.3",
		"@types/qs": "^6.9.0",
		"@types/react": "^16.9.17",
		"@types/react-dom": "^16.9.4",
		"@types/styled-components": "^4.4.1",
		"@types/styled-system": "^5.1.4",
		"apollo-client": "^2.6.8",
		"babel-jest": "^24.9.0",
		"babel-loader": "^8.0.6",
		"codecov": "^3.6.1",
		"cross-env": "^6.0.3",
		"docz": "^2.2.0",
		"immutability-helper": "^3.0.1",
		"jest": "^24.9.0",
		"lerna": "^3.19.0",
		"lerna-changelog": "^0.8.3",
		"npm-run-all": "^4.1.5",
		"react": "^16.12.0",
		"react-docgen-typescript-loader": "^3.6.0",
		"react-dom": "^16.12.0",
		"rimraf": "^3.0.0",
		"rollup": "^1.27.5",
		"rollup-plugin-invariant": "^0.5.6",
		"rollup-plugin-local-resolve": "^1.0.7",
		"rollup-plugin-sourcemaps": "^0.4.2",
		"rollup-plugin-terser": "^5.1.2",
		"styled-components": "^4.4.1",
		"styled-system": "^5.1.4",
		"ts-jest": "^24.2.0",
		"ts-loader": "^6.2.1",
		"ts-node": "^8.5.2",
		"tslib": "^1.10.0",
		"typescript": "^3.7.4"
	},
	"resolutions": {
		"@types/react": "16.9.17"
	},
	"jest": {
		"projects": [
			"<rootDir>/packages/*"
		]
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"prettier --write",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
