{
	"private": true,
	"name": "@tpr/monorepo",
	"license": "MIT",
	"scripts": {
		"remove-typing-dupes": "rimraf node_modules/@types/react-native",
		"postinstall": "lerna exec -- yarn install --no-lockfile && lerna run prepare",
		"diff": "check-if-folder-contents-changed-in-git-commit-range",
		"build": "lerna run build",
		"test": "jest",
		"test:watch": "jest --watch",
		"coverage": "jest --verbose --coverage",
		"coverage:upload": "codecov",
		"codecov": "echo TODO...",
		"lint": "prettier --list-different \"packages/*/src/**/*.{js,jsx,ts,tsx}\"",
		"lint-fix": "prettier --write \"packages/*/src/**/*.{js,jsx,ts,tsx}\"",
		"posttest": "yarn lint",
		"publish": "lerna run build && lerna publish",
		"clean": "find . -name \"node_modules\" -exec rm -rf '{}' + && find . -name \"lib\" -exec rm -rf '{}' +",
		"docz:dev": "docz dev",
		"docz:build": "docz build",
		"docz:serve": "docz build && docz serve"
	},
	"dependencies": {
		"ajax": "file:packages/ajax",
		"core": "file:packages/core",
		"forms": "file:packages/forms",
		"icons": "file:packages/icons",
		"table": "file:packages/table",
		"theming": "file:packages/theming"
	},
	"devDependencies": {
		"@babel/core": "^7.8.3",
		"@rollup/plugin-commonjs": "^11.0.2",
		"@rollup/plugin-node-resolve": "^7.1.1",
		"@testing-library/jest-dom": "^5.1.1",
		"@testing-library/react": "^9.4.1",
		"@testing-library/react-hooks": "^3.2.1",
		"@types/jest": "^25.1.2",
		"@types/lodash": "^4.14.149",
		"@types/prop-types": "^15.7.3",
		"@types/qs": "^6.9.1",
		"@types/ramda": "^0.26.42",
		"@types/react": "^16.9.23",
		"@types/react-dom": "^16.9.5",
		"@types/styled-components": "^5.0.1",
		"@types/styled-system": "^5.1.7",
		"apollo-client": "^2.6.8",
		"babel-jest": "^25.1.0",
		"babel-loader": "^8.0.6",
		"codecov": "^3.6.5",
		"core-js": "^3.6.4",
		"cross-env": "^7.0.0",
		"docz": "^2.2.0",
		"immutability-helper": "^3.0.1",
		"jest": "^25.1.0",
		"lerna": "^3.20.2",
		"lerna-changelog": "^1.0.0",
		"npm-run-all": "^4.1.5",
		"react": "^16.12.0",
		"react-docgen-typescript-loader": "^3.6.0",
		"react-dom": "^16.12.0",
		"react-test-renderer": "^16.12.0",
		"rimraf": "^3.0.2",
		"rollup": "^1.31.1",
		"rollup-plugin-invariant": "^0.5.6",
		"rollup-plugin-local-resolve": "^1.0.7",
		"rollup-plugin-sourcemaps": "^0.5.0",
		"rollup-plugin-terser": "^5.2.0",
		"rollup-plugin-typescript2": "^0.26.0",
		"styled-components": "^5.0.1",
		"styled-system": "^5.1.5",
		"ts-jest": "^25.2.1",
		"ts-loader": "^6.2.1",
		"ts-node": "^8.6.2",
		"tslib": "^1.11.0",
		"typescript": "3.7.3"
	},
	"jest": {
		"projects": [
			"<rootDir>/packages/*"
		]
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"prettier --write",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
