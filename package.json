{
	"private": true,
	"name": "@tpr/monorepo",
	"license": "MIT",
	"scripts": {
		"postinstall": "npx lerna exec -- npm install --package-lock=false && npx lerna run prepare",
		"build": "npx lerna run build",
		"test": "jest",
		"test:watch": "jest --watch",
		"posttest": "yarn lint",
		"lint": "prettier --list-different \"packages/*/src/**/*.{ts,tsx}\"",
		"lint-fix": "prettier --write \"packages/*/src/**/*.{ts,tsx}\"",
		"deploy": "npx lerna run build && lerna publish",
		"clean": "find . -name \"node_modules\" -exec rm -rf '{}' + && find . -name \"lib\" -exec rm -rf '{}' +",
		"format": "pretty-quick --pattern '**/*.*(js|ts|tsx)'",
		"docz:dev": "docz dev",
		"docz:build": "docz build",
		"docz:serve": "docz build && docz serve"
	},
	"dependencies": {
		"@tpr/core": "file:./packages/core",
		"@tpr/forms": "file:./packages/forms",
		"@tpr/icons": "file:./packages/icons",
		"@tpr/table": "file:./packages/table",
		"@tpr/theming": "file:./packages/theming"
	},
	"devDependencies": {
		"@babel/core": "^7.8.6",
		"@rollup/plugin-commonjs": "^11.0.1",
		"@rollup/plugin-node-resolve": "^7.0.0",
		"@testing-library/jest-dom": "^5.1.1",
		"@testing-library/react": "^9.4.0",
		"@testing-library/react-hooks": "^3.2.1",
		"@types/jest": "^25.1.3",
		"@types/lodash": "^4.14.149",
		"@types/prop-types": "^15.7.3",
		"@types/qs": "^6.9.0",
		"@types/ramda": "^0.26.40",
		"@types/react": "^16.9.17",
		"@types/react-dom": "^16.9.4",
		"@types/styled-components": "^4.4.1",
		"@types/styled-system": "^5.1.4",
		"@xstate/react": "^0.8.1",
		"babel-jest": "^25.1.0",
		"babel-loader": "^8.0.6",
		"codecov": "^3.6.1",
		"cross-env": "^6.0.3",
		"docz": "^2.2.0",
		"immutability-helper": "^3.0.1",
		"jest": "^25.1.0",
		"lerna": "^3.19.0",
		"lerna-changelog": "^1.0.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.19.1",
		"pretty-quick": "^2.0.1",
		"react": "^16.12.0",
		"react-docgen-typescript-loader": "^3.6.0",
		"react-dom": "^16.12.0",
		"react-test-renderer": "^16.12.0",
		"rimraf": "^3.0.0",
		"rollup": "^1.27.5",
		"rollup-plugin-invariant": "^0.5.6",
		"rollup-plugin-local-resolve": "^1.0.7",
		"rollup-plugin-sourcemaps": "^0.5.0",
		"rollup-plugin-terser": "^5.1.2",
		"rollup-plugin-typescript2": "^0.25.3",
		"styled-components": "^5.0.0",
		"styled-system": "^5.1.4",
		"ts-jest": "^25.2.1",
		"ts-loader": "^6.2.1",
		"ts-node": "^8.5.2",
		"tslib": "^1.10.0",
		"typescript": "^3.7.5"
	},
	"resolutions": {
		"@types/react": "16.9.17"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"prettier --write",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
