{
	"private": true,
	"name": "@tpr/monorepo",
	"license": "MIT",
	"scripts": {
		"postinstall": "npx lerna exec -- npm install --package-lock=false && npx lerna run prepare",
		"build": "npx lerna run build",
		"test": "jest",
		"test:watch": "jest --watch",
		"posttest": "yarn lint",
		"lint": "prettier --list-different \"packages/*/src/**/*.{ts,tsx}\"",
		"lint-fix": "prettier --write \"packages/*/src/**/*.{ts,tsx}\"",
		"deploy": "npx lerna run build && lerna publish",
		"clean": "find . -name \"node_modules\" -exec rm -rf '{}' + && find . -name \"lib\" -exec rm -rf '{}' +",
		"format": "pretty-quick --pattern '**/*.*(js|ts|tsx)'",
		"docz:dev": "docz dev",
		"docz:build": "docz build",
		"docz:serve": "docz build && docz serve"
	},
	"dependencies": {
		"@tpr/core": "file:./packages/core",
		"@tpr/icons": "file:./packages/icons",
		"@tpr/theming": "file:./packages/theming"
	},
	"devDependencies": {
		"@babel/core": "^7.9.0",
		"@babel/preset-env": "^7.9.5",
		"@rollup/plugin-commonjs": "^11.1.0",
		"@rollup/plugin-node-resolve": "^7.1.3",
		"@testing-library/jest-dom": "^5.5.0",
		"@testing-library/react": "^10.0.2",
		"@testing-library/react-hooks": "^3.2.1",
		"@types/jest": "^25.2.1",
		"@types/react": "^16.9.34",
		"@types/react-dom": "^16.9.6",
		"@xstate/react": "^0.8.1",
		"babel-jest": "^25.3.0",
		"babel-loader": "^8.1.0",
		"codecov": "^3.6.1",
		"copyfiles": "^2.2.0",
		"cross-env": "^7.0.2",
		"docz": "^2.3.1",
		"gatsby-plugin-sass": "^2.3.0",
		"immutability-helper": "^3.0.2",
		"jest": "^25.3.0",
		"lerna": "^3.19.0",
		"lerna-changelog": "^1.0.0",
		"node-sass": "^4.14.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.0.4",
		"pretty-quick": "^2.0.1",
		"react": "^16.13.1",
		"react-docgen-typescript-loader": "^3.7.2",
		"react-dom": "^16.13.1",
		"react-test-renderer": "^16.13.1",
		"rimraf": "^3.0.0",
		"rollup": "^2.6.1",
		"rollup-plugin-invariant": "^0.5.6",
		"rollup-plugin-local-resolve": "^1.0.7",
		"rollup-plugin-peer-deps-external": "^2.2.2",
		"rollup-plugin-postcss": "^2.8.2",
		"rollup-plugin-sourcemaps": "^0.5.0",
		"rollup-plugin-terser": "^5.3.0",
		"rollup-plugin-typescript2": "^0.27.0",
		"ts-jest": "^25.3.1",
		"ts-loader": "^7.0.0",
		"ts-node": "^8.8.2",
		"tslib": "^1.10.0",
		"typescript": "^3.8.3"
	},
	"resolutions": {
		"@types/react": "16.9.34"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"prettier --write",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
