{
	"private": true,
	"name": "@tpr/monorepo",
	"license": "MIT",
	"scripts": {
		"postinstall": "npx lerna exec -- npm install --package-lock=false && npx lerna run prepare",
		"build": "npx lerna run build",
		"postbuild": "yarn bundle",
		"test": "jest",
		"test:watch": "jest --watch",
		"posttest": "yarn lint",
		"lint": "prettier --list-different \"packages/*/src/**/*.{ts,tsx}\"",
		"lint-fix": "prettier --write \"packages/*/src/**/*.{ts,tsx}\"",
		"clean": "find . -name \"node_modules\" -exec rm -rf '{}' + && find . -name \"lib\" -exec rm -rf '{}' +",
		"format": "pretty-quick --pattern \"./packages/**/*.*(js|ts|tsx)\"",
		"bundle": "npx lerna exec --parallel -- yarn bundle",
		"docz:dev": "docz dev",
		"docz:build": "docz build",
		"docz:serve": "docz build && docz serve",
		"predeploy": "yarn build",
		"deploy": "lerna publish --canary"
	},
	"dependencies": {
		"@tpr/core": "file:./packages/core",
		"@tpr/forms": "file:./packages/forms",
		"@tpr/icons": "file:./packages/icons",
		"@tpr/layout": "file:./packages/layout",
		"@tpr/theming": "file:./packages/theming"
	},
	"devDependencies": {
		"@babel/core": "^7.10.2",
		"@babel/preset-env": "^7.10.2",
		"@rollup/plugin-commonjs": "^12.0.0",
		"@rollup/plugin-node-resolve": "^8.0.0",
		"@testing-library/jest-dom": "^5.9.0",
		"@testing-library/react": "^10.0.5",
		"@testing-library/react-hooks": "^3.2.1",
		"@types/jest": "^25.2.1",
		"@types/react": "^16.9.34",
		"@types/react-dom": "^16.9.6",
		"@xstate/react": "^0.8.1",
		"autoprefixer": "^9.7.6",
		"babel-jest": "^26.0.1",
		"babel-loader": "^8.1.0",
		"codecov": "^3.6.1",
		"copyfiles": "^2.2.0",
		"cross-env": "^7.0.2",
		"docz": "^2.3.1",
		"gatsby-plugin-sass": "^2.3.0",
		"husky": "^4.2.5",
		"identity-obj-proxy": "^3.0.0",
		"immutability-helper": "^3.1.1",
		"jest": "^26.0.1",
		"lerna": "^3.19.0",
		"lerna-changelog": "^1.0.0",
		"node-sass": "^4.14.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.0.4",
		"pretty-quick": "^2.0.1",
		"react": "^16.13.1",
		"react-docgen-typescript-loader": "^3.7.2",
		"react-dom": "^16.13.1",
		"react-test-renderer": "^16.13.1",
		"rimraf": "^3.0.0",
		"rollup": "^2.12.0",
		"rollup-plugin-ignore-import": "^1.3.2",
		"rollup-plugin-local-resolve": "^1.0.7",
		"rollup-plugin-peer-deps-external": "^2.2.2",
		"rollup-plugin-postcss": "^3.1.1",
		"rollup-plugin-sourcemaps": "^0.6.2",
		"rollup-plugin-terser": "^6.1.0",
		"rollup-plugin-typescript2": "^0.27.1",
		"ts-jest": "^26.1.0",
		"ts-loader": "^7.0.5",
		"ts-node": "^8.10.2",
		"tslib": "^2.0.0",
		"typescript": "^3.9.3"
	},
	"resolutions": {
		"@types/react": "16.9.35"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"prettier --write",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn format"
		}
	}
}
