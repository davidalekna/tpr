{
	"extends": "../../config/tsconfig.base.json",
	"compilerOptions": {
		"rootDir": "src",
		"baseUrl": "src",
		"composite": true,
		"outDir": "lib",
		"jsx": "react",
		"pretty": true,
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"lib": ["es2019", "dom"]
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"src/visualTest.tsx",
		"**/__tests__/**/*",
		"**/__mocks__/**/*",
		"**/*.mdx"
	]
}
