{
	"name": "@tpr/core",
	"version": "1.0.0",
	"description": "TPR Core components",
	"author": "David Alekna <david.alekna@tpr.gov.uk>",
	"license": "MIT",
	"main": "./lib/bundle.cjs.js",
	"module": "./lib/bundle.esm.js",
	"typings": "./lib/index.d.ts",
	"sideEffects": false,
	"files": [
		"lib/bundle*",
		"lib/*.d.ts"
	],
	"repository": {
		"type": "git",
		"url": "https://dev.azure.com/thepensionsregulator/TPR/_git/react-components.git"
	},
	"bugs": {
		"url": "https://dev.azure.com/thepensionsregulator/TPR/_git/react-components/issues"
	},
	"homepage": "https://dev.azure.com/thepensionsregulator/TPR/_git/react-components#readme",
	"keywords": [
		"tpr"
	],
	"scripts": {
		"prepare": "yarn build",
		"dev": "yarn storybook",
		"test": "jest --coverage",
		"test:watch": "jest --watch",
		"build": "yarn clean && tsc -b .",
		"postbuild": "yarn bundle",
		"bundle": "cross-env-shell \"../../node_modules/.bin/rollup\" -c rollup.config.js",
		"clean": "rimraf lib storybook-static esm",
		"report-coverage": "codecov",
		"storybook": "start-storybook -p 6008",
		"storybook:build": "build-storybook",
		"storybook:clean": "rimraf storybook-static",
		"docz:dev": "docz dev",
		"docz:build": "docz build",
		"docz:serve": "docz build && docz serve"
	},
	"devDependencies": {
		"@babel/core": "^7.7.7",
		"@babel/preset-typescript": "^7.7.7",
		"@storybook/addon-actions": "^5.2.8",
		"@storybook/addon-links": "^5.2.8",
		"@storybook/react": "^5.2.8",
		"@testing-library/jest-dom": "^4.2.4",
		"@testing-library/react": "^9.4.0",
		"@types/jest": "^24.0.25",
		"@types/prop-types": "^15.7.3",
		"@types/qs": "^6.9.0",
		"@types/react": "^16.9.17",
		"@types/react-dom": "^16.9.4",
		"@types/styled-components": "^4.4.1",
		"@types/styled-system": "^5.1.4",
		"awesome-typescript-loader": "^5.2.1",
		"babel-jest": "^24.9.0",
		"babel-loader": "^8.0.6",
		"codecov": "^3.6.1",
		"cross-env": "^6.0.3",
		"docz": "^2.2.0",
		"immutability-helper": "^3.0.1",
		"jest": "^24.9.0",
		"npm-run-all": "^4.1.5",
		"react": "^16.12.0",
		"react-docgen-typescript-loader": "^3.6.0",
		"react-dom": "^16.12.0",
		"semantic-release": "^15.14.0",
		"styled-components": "^4.4.1",
		"styled-system": "^5.1.4",
		"ts-jest": "^24.2.0",
		"ts-loader": "^6.2.1",
		"ts-node": "^8.5.2",
		"tslib": "^1.10.0",
		"typescript": "^3.7.4"
	},
	"peerDependencies": {
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"styled-components": "^4.4.1"
	},
	"dependencies": {
		"final-form": "^4.18.6",
		"prop-types": "^15.7.2",
		"qs": "^6.9.1",
		"react-final-form": "^6.3.3"
	},
	"publishConfig": {
		"access": "public"
	}
}
